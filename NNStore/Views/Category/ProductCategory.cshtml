                                            </li>*@
                                        </ul>
                                        <div class="label-rating">5/5</div>
                                    </div> <!-- rating-wrap.// -->

                                    <p class="mb-3">
                                        <span class="tag"> <i class="fa fa-check"></i> Đã xác thực</span>
                                        <span class="tag"> 1 năm </span>
                                        <span class="tag"> 80 lượt xem </span>
                                    </p>

                                    <p>
                                        @item.FullDescription
                                    </p>

                                </div> <!-- info-main.// -->
                            </div> <!-- col.// -->
                            <aside class="col-sm-3">
                                <div class="info-aside">
                                    <div class="price-wrap">
                                        @if (item.Price != null)
                                        {
                                            <p class="price m-1">
                                                <h4><span class="badge badge-danger font-weight-bold"> $@Convert.ToDecimal(item.Price).ToString("#,###")đ</span></h4>
                                            </p>
                                            <h5 style="margin-top:10px;">
                                                <del class="font-weight-bold">$@Convert.ToDecimal(item.Price).ToString("#,###")đ</del>
                                                <small class="text-muted">/ 1 sản phẩm</small>
                                            </h5>
                                        }
                                        @if (item.PriceSale == null)
                                        {
                                            <h4><span class="font-weight-bold">$@Convert.ToDecimal(item.PriceSale).ToString("#,###")đ</span></h4>
                                            <small class="text-muted">/ 1 sản phẩm</small>
                                        }
                                    </div> <!-- price-wrap.// -->
